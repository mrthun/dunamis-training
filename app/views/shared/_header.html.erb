<% if @organization.present? %>
  <h1><%= link_to @organization.subdomain.name , root_url(:subdomain => @organization.subdomain.name ) %></h1>
<%else%>
  <h1><%= link_to "DUNAMIS TRAINING", root_url(:subdomain => false ) %></h1>
<%end%>

<% if logged_in? %>
  <p>
    <%= current_user.email %> is Logged in As: <%= current_user.roles.first.title %>
  </p>
<%end%>


<% subdomain = @organization.present? ? @organization.subdomain.name : false %>
<% if logged_in? %>
  <% if @organization.present? %>
    <% if  current_user.is_organization? %>
      <%= render :partial => "/shared/organization_links", :locals  => { :subdomain => subdomain } %>
    <% elsif  current_user.is_registrant? %>
      <%= render :partial => "/shared/registrant_links", :locals  => { :subdomain => subdomain } %>
    <% elsif  current_user.is_scheduler? %>
      <%= render :partial => "/shared/scheduler_links", :locals  => { :subdomain => subdomain } %>
    <%end%>
  <%else%>
    <%= render :partial => "/shared/admin_links", :locals  => { :subdomain => subdomain } %>
  <%end%>
  <%= link_to "Sign Out", logout_path(:subdomain => subdomain) %>
<%else%>
  <%= link_to "Sign In", login_url(:subdomain => subdomain) %>
  <% unless @organization.present? %>
    | <%= link_to "Get Registered", signup_url(:subdomain => subdomain) %>
  <%end%>
<%end%>