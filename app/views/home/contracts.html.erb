<h1>All Contracts List</h1>
<% unless @contracts.blank? %>
  <table>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
    <% @contracts.each do |contract| %>
      <tr>
        <td><%= contract.title %></td>
        <td>
          <%= link_to "Remove", remove_contract_home_index_path(:id => contract.id ) %>
        </td>
      </tr>
    <%end%>
  </table>
<%else%>
  No Contract Type Listed Yet. <br /><br />
<%end%>

<h2>Add New Contract Type</h2>
<%= form_for :contract_type, :url => add_contract_home_index_path do |f| -%>
  <p><%= label_tag 'Name' %><br/>
    <%= f.text_field :title %></p>
  <p><%= submit_tag 'Add' %></p>
<% end -%>