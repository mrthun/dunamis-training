<h1>Occupations</h1>
<% unless @occupations.blank? %>
  <table>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
    <% @occupations.each do |occupation| %>
      <tr>
        <td><%= occupation.title %></td>
        <td>
          <%= link_to "Remove", remove_occupation_home_index_path(:id => occupation.id ) %>
        </td>
      </tr>
    <%end%>
  </table>
<%else%>
  No Occupation Type Listed Yet. <br /><br />
<%end%>

<h2>Add New Occupation Type</h2>
<%= form_for :occupation_type, :url => add_occupation_home_index_path do |f| -%>
  <p><%= label_tag 'Name' %><br/>
    <%= f.text_field :title %></p>
  <p><%= submit_tag 'Add' %></p>
<% end -%>